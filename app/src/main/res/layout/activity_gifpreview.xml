<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apps.mjn.giphyapp.screens.gifpreview.GifPreviewView">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_gifpreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:layout_margin="@dimen/space_2x"
        card_view:cardCornerRadius="@dimen/space_1x"
        card_view:cardElevation="@dimen/space_0.5x">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <VideoView
                android:id="@+id/vv_gifpreview_gif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv_gifpreview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_1x"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ProgressBar
        android:id="@+id/pb_gifpreview_loading"
        android:layout_width="@dimen/progress"
        android:layout_height="@dimen/progress"
        android:layout_centerInParent="true"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true">

        <ProgressBar
            android:id="@+id/pb_gifpreview_delay"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="10000"
            android:progress="0"/>
    </FrameLayout>

</RelativeLayout>
